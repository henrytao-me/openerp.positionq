<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>

		<!-- List view -->
		<record id="view_tree_snc_nhan_dinh_ngay_setup" model="ir.ui.view">
			<field name="name">view_tree_snc_nhan_dinh_ngay_setup</field>
			<field name="model">snc.nhan.dinh.ngay.setup</field>
			<field name="arch" type="xml">
				<tree string="Thiết lập nhận định ngày" version="7.0" >					
					<field name="name"/>
					<field name="is_active"/>
				</tree>
			</field>
		</record>

		<!-- Form view -->
		<record id="view_form_snc_nhan_dinh_ngay_setup" model="ir.ui.view">
			<field name="name">view_form_snc_nhan_dinh_ngay_setup</field>
			<field name="model">snc.nhan.dinh.ngay.setup</field>
			<field name="arch" type="xml">
				<form string="Thiết lập nhận định ngày" version="7.0">
					<header>
	                    <field name="state" widget="statusbar" clickable="True" />
	                </header>
					<sheet>
						<h2><field name="name" /></h2>
						<group>
							<group>Thiết lập
								<field name="is_active"></field>
								<field name="dcxh"></field>
								<field name="dcbd"></field>
								<field name="percent_xh"></field>
								<field name="percent_bd"></field>
							</group>
							<group>
								<field name="from_time" widget="float_time"></field>
								<field name="to_time" widget="float_time"></field>
								<field name="cal_from"></field>
								<field name="cal_to"></field>								
							</group>
						</group>
                        <notebook colspan="4">
                        	<page string="Các ngày không nhận định">
                        		<field name="exception"></field>								
							</page>
							<page string="Người dùng cần tính trọng số">
                        		<field name="users" domain="[('is_public', '=', True)]"></field>								
							</page>
						</notebook>
					</sheet>		
				</form>
			</field>
		</record>

		<!-- Search view -->
		<record id="view_search_snc_nhan_dinh_ngay_setup" model="ir.ui.view">
			<field name="name">view_search_snc_nhan_dinh_ngay_setup</field>
			<field name="model">snc.nhan.dinh.ngay.setup</field>
			<field name="arch" type="xml">
				<search string="Thiết lập nhận định ngày" version="7.0">
					<field name="name"></field>
				</search>
			</field>
		</record>

		<!-- Actions -->
		<record id="act_window_snc_nhan_dinh_ngay_setup" model="ir.actions.act_window">
			<field name="name">Thiết lập nhận định ngày</field>
			<field name="res_model">snc.nhan.dinh.ngay.setup</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>

	</data>
</openerp>
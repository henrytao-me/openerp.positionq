<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    	
    	<record id="view_groups_form_inherit" model="ir.ui.view">
		    <field name="name">res.groups.form inherit</field>
		    <field name="model">res.groups</field>
		    <field name="type">form</field>
		    <field name="inherit_id" ref="base.view_groups_form"/>
		    <field name="arch" type="xml">
		    	<field name="name" position="after">
		    		<field name="special_user"/>
		    		<field name="is_project_specific"/>
		    	</field>
		    </field>
		</record>
    	
    	
        <record id="view_groups_form" model="ir.ui.view">
		    <field name="name">res.groups.form</field>
		    <field name="model">res.groups</field>
		    <field name="type">form</field>
		    <field name="priority" eval="100"/>
		    <field name="arch" type="xml">
		    	<form string="Groups" version="7.0">
					<sheet>
						<group col="4">
	                        <field name="category_id"/>
	                        <field name="name"/>
	                    </group>						
						<notebook>
			                <page string="Users">
			                    <field name="users" domain="[('is_project_specific', '=', True)]"/>
			                </page>
			            </notebook>		
					</sheet>
                </form>		        
		    </field>
		</record>
        
        <record id="action_res_groups" model="ir.actions.act_window">
            <field name="name">Nhóm người dùng</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.groups</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('is_project_specific', '=', True), ('special_user', '=', False)]</field>
            <field name="context">{'is_project_specific': True}</field>
        </record>
        <record id="action_res_groups_view_tree" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="act_window_id" ref="action_res_groups"/>
        </record>
        <record id="action_res_groups_view_form" model="ir.actions.act_window.view">
            <field eval="100" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_groups_form"/>
            <field name="act_window_id" ref="action_res_groups"/>
        </record>
        
    </data>
</openerp>


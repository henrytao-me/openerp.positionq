<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
	
		<!-- List view -->
		<record id="view_tree_ir_model_access_new" model="ir.ui.view">
			<field name="name">view_tree_ir_model_access_new</field>
			<field name="model">ir.model.access.new</field>
			<field name="arch" type="xml">
				<tree string="Phân quyền" editable="top" version="7.0" widget="group_by" delete="false"
						 hide_selector="true">
					<field name="group_name"/>
					<field name="user_name"/>					
					<field name="model_name"/>
					<field name="perm_read"/>
					<field name="perm_read_new"/>
					<field name="perm_write"/>
					<field name="perm_write_new"/>
					<field name="perm_create"/>
					<field name="perm_create_new"/>
					<field name="perm_unlink"/>
					<field name="perm_unlink_new"/>
					<field name="perm_manage"/>
				</tree>
			</field>
		</record>
		
		
		<!-- Search view -->
		<record id="view_search_ir_model_access_new" model="ir.ui.view">
            <field name="name">view_search_ir_model_access_new</field>
            <field name="model">ir.model.access.new</field>
            <field name="arch" type="xml">
	            <search string="Phân quyền">
					<field name="group_name"/>
					<field name="user_name"/>					
					<field name="model_name"/>
					<group string="Gom nhóm theo...">
						<filter name="filter_group" string="Nhóm người dùng" icon="terp-personal" domain="[]" context="{'group_by' : 'group_name'}" />
						<filter name="filter_user" string="Người dùng" icon="terp-personal" domain="[]" context="{'group_by' : 'user_name'}" />						
						<filter name="filter_model" string="Đối tượng" icon="terp-personal" domain="[]" context="{'group_by' : 'model_name'}" />
					</group>					
				</search>
            </field>
        </record>
		
        
        
        <!-- Actions -->
        <record id="action_tree_ir_model_access_new" model="ir.actions.act_window">
            <field name="name">Phân quyền</field>
            <field name="res_model">ir.model.access.new</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>            
            <!-- <field name="context">{'search_default_filter_group': 1, 'search_default_filter_user': 1}</field> -->
        </record>
	
	</data>
</openerp>
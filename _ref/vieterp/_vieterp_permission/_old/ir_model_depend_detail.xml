<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        
		<!-- List view -->
		<record id="view_tree_ir_model_depend_detail" model="ir.ui.view">
			<field name="name">view_tree_ir_model_depend_detail</field>
			<field name="model">ir.model.depend.detail</field>
			<field name="arch" type="xml">
				<tree string="Nhóm đối tượng" version="7.0" editable="top" widget="group_by" hide_selector="true">
					<field name="name"/>
					<field name="model"/>
					<field name="is_root"/>
				</tree>
			</field>
		</record>
		
		
		<!-- Form view -->
		<record id="view_form_ir_model_depend_detail" model="ir.ui.view">
			<field name="name">view_form_ir_model_depend_detail</field>
			<field name="model">ir.model.depend.detail</field>
			<field name="arch" type="xml">
				<form string="Nhóm đối tượng" version="7.0">
					<sheet>
						<group>
							<group>
								<field name="name"/>
							</group>
							<group>
								<field name="is_root"/>
							</group>
							<field name="model"/>
						</group>
					</sheet>		
				</form>
			</field>
		</record>
		
		
		<!-- Search view -->
		<record id="view_search_ir_model_depend_detail" model="ir.ui.view">
            <field name="name">view_search_ir_model_depend_detail</field>
            <field name="model">ir.model.depend.detail</field>
            <field name="arch" type="xml">
	            <search string="Nhóm đối tượng">
					<field name="name"/>
					<field name="model"/>
					<group string="Gom nhóm theo...">
						<filter string="Parent Model" context="{'group_by' : 'name'}" />
					</group>
				</search>
            </field>
        </record>
        
        
        <!-- Actions -->
        <record id="action_tree_ir_model_depend_detail" model="ir.actions.act_window">
            <field name="name">Nhóm đối tượng</field>
            <field name="res_model">ir.model.depend.detail</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
        </record>

    </data>
</openerp>


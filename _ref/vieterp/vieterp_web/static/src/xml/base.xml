<?xml version="1.0" encoding="UTF-8"?>
<templates id="vieterp_web" xml:space="preserve">
	
<t t-name="Menu.link">
    <a t-attf-href="#menu_id=#{menu.id}&amp;action=#{menu.action ? menu.action.split(',')[1] : ''}#{menu.first_id ? '&amp;id='+menu.first_id : ''}"
        t-att-class="menu.children.length ? (menu.res_model == 'vieterp.tmp' ? 'oe_menu_toggler adisable': 'oe_menu_toggler') : (menu.res_model == 'vieterp.tmp' ? 'oe_menu_leaf adisable': 'oe_menu_leaf')"
        t-att-data-menu="menu.id"        
        t-att-data-action-model="menu.action ? menu.action.split(',')[0] : ''"
        t-att-data-action-id="menu.action ? menu.action.split(',')[1] : ''">
        <span class="oe_menu_text">
            <t t-esc="menu.name"/>
        </span>
    </a>
</t>
	
</templates>
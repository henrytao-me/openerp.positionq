<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
	
		<!-- List view -->
		<record id="view_tree_mymod" model="ir.ui.view">
			<field name="name">view_tree_mymod</field>
			<field name="model">mymod</field>
			<field name="arch" type="xml">
				<tree string="My mod">
					<field name="name"/>
					<field name="state"/>					
				</tree>
			</field>
		</record>
		
		<!-- Form view -->
		<record id="view_form_mymod" model="ir.ui.view">
			<field name="name">view_form_mymod</field>
			<field name="model">mymod</field>
			<field name="arch" type="xml">
				<form string="My mod" version="7.0">
					<header>
						<button name="mymod_assigned" string="Assigned" states="new" />
						<button name="act_mymod_assigned_2" type="object" string="Assigned 2" states="new" />
						<button name="mymod_negotiation" string="In Negotiation" states="assigned" />
						<button name="mymod_won" string="Won" states="negotiation" />
						<button name="mymod_lost" string="Lost" states="negotiation" />
					</header>
					<sheet>
						<group colspan="4">
							<field name="name"/>
							<field name="state"/>
						</group>
					</sheet>
				</form>
			</field>
		</record>
		
		<!-- Search view -->
		<record id="view_search_mymod" model="ir.ui.view">
            <field name="name">view_search_mymod</field>
            <field name="model">mymod</field>
            <field name="arch" type="xml">
	            <search string="My mod">
					<field name="name"/>					
				</search>
            </field>
        </record>
        
        <!-- Actions -->
        <record id="act_window_mymod" model="ir.actions.act_window">
            <field name="name">My mod</field>
            <field name="res_model">mymod</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
	
	</data>
</openerp>
<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		
		<!-- View -->
		<record id="view_view_tree" model="ir.ui.view">
            <field name="model">ir.ui.view</field>
            <field name="arch" type="xml">
                <tree string="Views">
                    <field name="priority" string="Sequence"/>
                    <field name="name"/>
                    <field name="type"/>
                    <field name="model"/>
                    <field name="xml_id"/>
                    <field name="inherit_id"/>
                    <field name="vbase" string="Custom"></field>
                </tree>
            </field>
        </record>
        
        <record id="view_view_form" model="ir.ui.view">
            <field name="model">ir.ui.view</field>
            <field name="arch" type="xml">
                <form string="Views" version="7.0">
                   <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="model"/>
                            <field name="priority"/>
                        </group>
                        <group>
                            <field name="field_parent"/>
                            <field name="inherit_id"/>
                            <field name="xml_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Architecture">
                            <field name="arch"/>
                        </page>
                        <page string="Groups">
                            <field name="groups_id"/>
                        </page>
                    </notebook>
                  </sheet>
                </form>
            </field>
        </record>
		
		<!-- Search -->
		
		<record id="view_view_search" model="ir.ui.view">
            <field name="model">ir.ui.view</field>
            <field name="arch" type="xml">
                <search string="Views">
                    <field name="name" filter_domain="['|', ('name','ilike',self), ('model','ilike',self)]" string="View"/>
                    <filter string="Form" domain="[('type', '=','form')]"/>
                    <filter string="Tree" domain="[('type', '=', 'tree')]"/>
                    <filter string="Kanban" domain="[('type', '=', 'kanban')]"/>
                    <filter string="Search" domain="[('type', '=', 'search')]"/>
                    <field name="model"/>
                    <field name="inherit_id"/>
                    <field name="type"/>
                    <filter string="VietERP Base View" name="filter_vbase" domain="[('vbase','=',True)]"/>
                    <group expand="0" string="Group By...">
                        <filter string="Object" icon="terp-stock_align_left_24" domain="[]" context="{'group_by':'model'}"/>
                        <filter string="Type" icon="terp-stock_symbol-selection" domain="[]" context="{'group_by':'type'}"/>
                    </group>
                </search>
            </field>
        </record>
		
		<!-- Actions -->
		<record id="act_window_views" model="ir.actions.act_window">
			<field name="name">Views</field>
			<field name="res_model">ir.ui.view</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="context">{'vbase': True, 'search_default_filter_vbase': 1}</field>
			<field name="search_view_id" ref="view_view_search"></field>
		</record>		
        <record id="action_res_users_view_tree" model="ir.actions.act_window.view">
            <field eval="100" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_view_tree"/>
            <field name="act_window_id" ref="act_window_views"/>
        </record>
        <record id="action_res_users_view_form" model="ir.actions.act_window.view">
            <field eval="100" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_view_form"/>
            <field name="act_window_id" ref="act_window_views"/>
        </record>

	</data>
</openerp>
    	<record id="view_groups_tree_inherit" model="ir.ui.view">
            <field name="name">res.groups.tree</field>
            <field name="model">res.groups</field>
            <field name="arch" type="xml">
                <tree string="Groups">
                	<field name="category_id"></field>
                	<field name="name"></field>
                	<field name="is_public"></field>
                </tree>
            </field>
        </record>
        
    	<record id="view_groups_form_inherit" model="ir.ui.view">
		    <field name="name">view_groups_form_inherit</field>
		    <field name="model">res.groups</field>
		    <field name="type">form</field>
		    <field name="inherit_id" ref="base.view_groups_form"/>
		    <field name="arch" type="xml">
		    	<field name="name" position="after">
		    		<field name="is_public"/>
		    	</field>
		    </field>
		</record>
		
		<record id="base.action_res_groups" model="ir.actions.act_window">
            <field name="view_mode">tree,form</field>
        </record>
		<record id="action_res_groups_tree" model="ir.actions.act_window.view">
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_groups_tree_inherit"></field>
            <field name="act_window_id" ref="base.action_res_groups"/>
        </record>
        <record id="action_res_groups_form" model="ir.actions.act_window.view">
            <field name="view_mode">form</field>
            <field name="view_id" ref="base.view_groups_form"></field>
            <field name="act_window_id" ref="base.action_res_groups"/>
        </record>




		

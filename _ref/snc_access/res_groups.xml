        <record id="act_window_res_groups" model="ir.actions.act_window">
            <field name="name">Nhóm người dùng</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.groups</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('is_public', '=', True)]</field>
            <field name="context">{'is_public': True}</field>
        </record>
        <record id="act_window_res_groups_tree" model="ir.actions.act_window.view">

<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
		
		<record id="view_users_tree_inherit" model="ir.ui.view">
            <field name="name">view_users_tree_inherit</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_tree"></field>
            <field name="arch" type="xml">
            	<field name="date" position="replace">
            		<field name="is_public"></field>
            	</field>
            </field>
        </record>
    	<record id="view_users_form_inherit" model="ir.ui.view">
		    <field name="name">view_users_form_inherit</field>
		    <field name="model">res.users</field>
		    <field name="priority" eval="10"></field>
		    <field name="type">form</field>
		    <field name="inherit_id" ref="base.view_users_form"/>
		    <field name="arch" type="xml">
		    	<field name="active" position="after">
		    		<field name="is_public"/>
		    	</field>
		    </field>
		</record>
		
		
		
		<record id="view_users_tree" model="ir.ui.view">
            <field name="name">res.users.tree</field>
            <field name="model">res.users</field>
            <field name="priority" eval="5"></field>
            <field name="arch" type="xml">
                <tree string="Users">
                    <field name="name"/>
                    <field name="login"/>
                    <field name="lang"/>                    
                </tree>
            </field>
        </record>
		
		<record id="view_users_form" model="ir.ui.view">
            <field name="name">res.users.form</field>
            <field name="model">res.users</field>
            <field name="arch" type="xml">
                <form string="Users" version="7.0">
                    <field name="id" invisible="1"/>
                    <sheet>                        
                        <field name="image" widget='image' class="oe_avatar oe_left" options='{"preview_image": "image_medium"}'/>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h2><field name="name"/></h2>
                            <label for="login" class="oe_edit_only"/>
                            <h3><field name="login"/></h3>
                        </div>
                        <group>
                            <group>
                                <field name="company_id" context="{'user_preference': 0}"/>
                            </group>
                            <group>
                                <field name="active"/>                                
                            </group>
                        </group>

                        <notebook colspan="4">
                        	<page string="Preferences">
                                <group>
                                    <group name="preferences">
                                        <field name="lang"/>
                                        <field name="tz"/>
                                    </group>
                                    <group groups="base.group_no_one">
                                        <field name="action_id"/>
                                        <field domain="[('usage','=','menu')]" name="menu_id" required="True"/>
                                    </group>
                                </group>
                                <group>
                                    <field name="email" widget="email"/>
                                    <field name="signature"/>
                                </group>
                            </page>
                            <page string="Nhóm người dùng">                            	
                            	<group col="4">
                                    <field name="groups_id"/>
                                </group>
				    		</page>				    		
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="user_groups_view" model="ir.ui.view">
            <field name="name">res.users.groups</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="view_users_form"/>
            <field name="arch" type="xml">
                <field name="groups_id" position="after"/>
            </field>
        </record>
        
		
		
        <record id="act_window_res_users" model="ir.actions.act_window">
            <field name="name">Người dùng</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.users</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('is_public', '=', True)]</field>
            <field name="context">{'is_public': True}</field>
        </record>
        <record id="act_window_res_users_view_tree" model="ir.actions.act_window.view">
            <field eval="10" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_users_tree"></field>
            <field name="act_window_id" ref="act_window_res_users"/>
        </record>
        <record id="act_window_res_users_view_form" model="ir.actions.act_window.view">
            <field eval="20" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_users_form"></field>
            <field name="act_window_id" ref="act_window_res_users"/>
        </record>
        
        
    </data>
</openerp>



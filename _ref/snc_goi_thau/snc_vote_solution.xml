<openerp>
	<data>

		<!-- List view -->
		<record id="view_tree_vote_solution" model="ir.ui.view">
			<field name="name">view_tree_vote_solution</field>
			<field name="model">snc.vote.solution</field>
			<field name="arch" type="xml">
				<tree string="Phương án bỏ phiếu" editable="top" version="7.0" >
					<field name="title"/>
					<field name="formula"/>
					<field name="name"/>
					<field name="sort"/>
					<field name="user_id"/>
				</tree>
			</field>
		</record>

		<!-- Form view -->
		<record id="view_form_vote_solution" model="ir.ui.view">
			<field name="name">view_form_vote_solution</field>
			<field name="model">snc.vote.solution</field>
			<field name="arch" type="xml">
				<form string="Phương án bỏ phiếu" version="7.0">
					<sheet>
						<group colspan="4">							
							<field name="r_value" />							
						</group>
					</sheet>
				</form>
			</field>
		</record>


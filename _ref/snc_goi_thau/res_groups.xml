<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    	
    	<record id="view_groups_tree" model="ir.ui.view">
            <field name="name">res.groups.tree</field>
            <field name="model">res.groups</field>
            <field name="arch" type="xml">
                <tree string="Groups" create="false" delete="false">                	
                	<field name="name"></field>
                </tree>
            </field>
        </record>
    			
    	<record id="view_groups_form" model="ir.ui.view">
            <field name="name">res.groups.form</field>
            <field name="model">res.groups</field>
            <field name="arch" type="xml">
                <form string="Groups" version="7.0" create="false" delete="false">
                  <sheet>                    
                    <notebook>
                        <page string="Users">
                            <field name="users" domain="[('is_public', '=', True)]"></field>
                        </page>                    
                    </notebook>
                  </sheet>
                </form>
            </field>
        </record>
    	
    	
        <record id="act_window_res_groups" model="ir.actions.act_window">
            <field name="name">Nhóm người dùng</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.groups</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">['|', 
            					  ('alias', '=', 'group_snc_goi_thau_user'),
            					  ('alias', '=', 'group_snc_goi_thau_manager')]</field>
        </record>
        <record id="act_window_res_groups_lgt_tree" model="ir.actions.act_window.view">
            <field eval="10" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_groups_tree"></field>
            <field name="act_window_id" ref="act_window_res_groups"/>
        </record>
        <record id="act_window_res_groups_lgt_form" model="ir.actions.act_window.view">
            <field eval="20" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_groups_form"></field>
            <field name="act_window_id" ref="act_window_res_groups"/>
        </record>
        
        
    </data>
</openerp>


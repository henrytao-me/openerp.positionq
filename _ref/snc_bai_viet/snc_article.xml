<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>

		<!-- List view -->
		<record id="view_tree_article" model="ir.ui.view">
			<field name="name">view_tree_article</field>
			<field name="model">snc.article</field>
			<field name="arch" type="xml">
				<tree string="Bài viết theo chủ đề" >
					<field name="name" string="Hello moto"/>
					<field name="topic_id"/>
					<field name="level"/>
					<field name="view"/>
					<field name="is_active"/>
					<field name="create_date"/>
					<field name="user_id"/>
				</tree>
			</field>
		</record>

		<!-- Form view -->
		<record id="view_form_article" model="ir.ui.view">
			<field name="name">view_form_article</field>
			<field name="model">snc.article</field>
			<field name="arch" type="xml">
				<form string="Bài viết theo chủ đề" version="7.0">
					<sheet>
						<h2><field name="name" default_focus="1" placeholder="Tiêu đề bài viết" /></h2>
						<group>
							<group>
								<field name="topic_id"/>
								<field name="level"/>
							</group>
							<group>
								<field name="is_active"/>
								<field name="source"/>
							</group>
						</group>
						<separator/>
						<div style="border-bottom:1px solid #ccc;padding-bottom:5px;"><label for="description"/></div>
						<field name="description" />
						<div style="border-bottom:1px solid #ccc;padding-bottom:5px;"><label for="content"/></div>
						<field name="content" />
					</sheet>
				</form>
			</field>
		</record>

		<!-- Search view -->
		<record id="view_search_article" model="ir.ui.view">
			<field name="name">view_search_article</field>
			<field name="model">snc.article</field>
			<field name="arch" type="xml">
				<search string="Bài viết theo chủ đề">
					<field name="name" string="Tiêu đề bài viết"/>
						<field name="topic_id" string="Chủ đề" filter_domain="[('topic_id', 'ilike', self)]"/>
						<field name="description" string="Mô tả ngắn gọn" filter_domain="[('description', 'ilike', self)]"/>
						<field name="content" string="Nội dung chi tiết" filter_domain="[('content', 'ilike', self)]"/>
						<field name="view" string="Số lượt xem" filter_domain="[('view', 'ilike', self)]"/>
						<field name="level" string="Mức độ" filter_domain="[('level', 'ilike', self)]"/>
						<!-- <field name="create_date" string="Ngày tạo" filter_domain="[('create_date', 'ilike', self)]"/> -->
						<field name="user_id" string="Người tạo" filter_domain="[('user_id', 'ilike', self)]"/>
					<group  expand='0' string='Gom nhóm theo'>
						<filter string='Chủ đề tin' icon="terp-mrp" domain="[]" context="{'group_by' : 'topic_id'}"/>	
						<filter string='Người tạo' icon="terp-mrp" domain="[]" context="{'group_by' : 'user_id'}"/>					
					</group>
				</search>
			</field>
		</record>

		<!-- Actions -->
		<record id="action_tree_article" model="ir.actions.act_window">
			<field name="name">Bài viết theo chủ đề</field>
			<field name="res_model">snc.article</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>

	</data>
</openerp>
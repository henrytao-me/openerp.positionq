<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
	
		<!-- List view -->
		<record id="view_tree_article_audio" model="ir.ui.view">
			<field name="name">view_tree_article_audio</field>
			<field name="model">snc.article.audio</field>
			<field name="arch" type="xml">
				<tree string="Bản tin audio">
					<field name="name"/>
					<field name="is_active"/>
					<field name="create_date"/>
					<field name="user_id"/>
				</tree>
			</field>
		</record>
		
		<!-- Form view -->
		<record id="view_form_article_audio" model="ir.ui.view">
			<field name="name">view_form_article_audio</field>
			<field name="model">snc.article.audio</field>
			<field name="arch" type="xml">
				<form string="Bản tin audio" version="7.0">
					<sheet>
						<h2><field name="name" default_focus="1" placeholder="Tiêu đề bản tin" /></h2>
						<group>
							<group>
								<field name="file"/>	
								<field name="filemanager" widget="ekiteditor_filebrowse"/>
							</group>
							<group>
								<field name="is_active"/>
							</group>							
						</group>
						<!-- <field name="description" string= "Share it... :" widget= "audio" /> -->
					</sheet>
				</form>
			</field>
		</record>
		
		<!-- Search view -->
		<record id="view_search_article_audio" model="ir.ui.view">
            <field name="name">view_search_article_audio</field>
            <field name="model">snc.article.audio</field>
            <field name="arch" type="xml">
	            <search string="Bản tin audio">
					<field name="name"/>
					<group  expand='0' string='Gom nhóm theo'>						
						<filter string='Người tạo' icon="terp-mrp" domain="[]" context="{'group_by' : 'user_id'}"/>					
					</group>
				</search>
            </field>
        </record>
        
        
        
        
        <!-- Actions -->
        <record id="action_tree_article_audio" model="ir.actions.act_window">
            <field name="name">Bản tin audio</field>
            <field name="res_model">snc.article.audio</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
	
	</data>
</openerp>
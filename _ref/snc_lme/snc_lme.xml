<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
	
		<!-- List view -->
		<record id="view_tree_snc_lme" model="ir.ui.view">
			<field name="name">view_tree_snc_lme</field>
			<field name="model">snc.lme</field>
			<field name="arch" type="xml">
				<tree string="LME" version="7.0">
					<field name="name"/>
					<field name="close"/>
					<field name="cash"/>
					<field name="volume"/>
					<field name="open"/>
					<field name="high"/>
					<field name="low"/>
					<field name="trend"/>
				</tree>
			</field>
		</record>
		
		
		<!-- Form view -->
		<record id="view_form_snc_lme" model="ir.ui.view">
			<field name="name">view_form_snc_lme</field>
			<field name="model">snc.lme</field>
			<field name="arch" type="xml">
				<form string="LME" version="7.0">
					<sheet>
						<group colspan="1" col="6">
							<field name="name"/>
	                    </group>
	                    <group colspan="1" col="6" class="oe_group_non_right">
							<group colspan="1">
								<label for="close"/>
								<newline/>
								<div>
                                	<field name="close" nolabel="1" class="oe_inline"/>
                                </div>
							</group>
							<group colspan="1">
								<label for="cash"/>
								<newline/>
								<div>
                                	<field name="cash" nolabel="1" class="oe_inline"/>
                                </div>
							</group>
							<group colspan="1">
								<label for="volume"/>
								<newline/>
								<div>
                                	<field name="volume" nolabel="1" class="oe_inline"/>
                                </div>
							</group>
							<group colspan="1">
								<label for="open"/>
								<newline/>
								<div>
                                	<field name="open" nolabel="1" class="oe_inline"/>
                                </div>
							</group>
							<group colspan="1">
								<label for="high"/>
								<newline/>
								<div>
                                	<field name="high" nolabel="1" class="oe_inline"/>
                                </div>
							</group>
							<group colspan="1">
								<label for="low"/>
								<newline/>
								<div>
                                	<field name="low" nolabel="1" class="oe_inline"/>
                                </div>
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>
		
		
		<!-- Search view -->
		<record id="view_search_snc_lme" model="ir.ui.view">
            <field name="name">view_search_snc_lme</field>
            <field name="model">snc.lme</field>
            <field name="arch" type="xml">
	            <search string="LME">
	            	<field name="name"/>
				</search>
            </field>
        </record>
        
        <!-- Actions -->
        <record id="act_window_snc_lme" model="ir.actions.act_window">
            <field name="name">Tổng hợp LME</field>
            <field name="res_model">snc.lme</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
	
	</data>
</openerp>
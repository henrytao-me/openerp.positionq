<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
	
		<!-- List view -->
		<record id="view_tree_truc_gia_lme" model="ir.ui.view">
			<field name="name">view_tree_truc_gia_lme</field>
			<field name="model">snc.truc.gia.lme</field>
			<field name="arch" type="xml">
				<tree string="Trực giá LME">
					<field name="name" invisible="1"/>
					<field name="ngay_gio_tao"/>
					<field name="last"/>
					<field name="volume"/>
					<field name="open"/>
					<field name="high"/>
					<field name="low"/>					
					<field name="close"/>
					<field name="cash"/>					
				</tree>
			</field>
		</record>
		
		
		<!-- Form view -->
		<record id="view_form_truc_gia_lme" model="ir.ui.view">
			<field name="name">view_form_truc_gia_lme</field>
			<field name="model">snc.truc.gia.lme</field>
			<field name="arch" type="xml">
				<form string="Trực giá LME" version="7.0">
					<sheet>
						<group colspan="4">
	                        <field name="ngay_gio_tao"/>
	                    </group>
	                    <div>
                        	<h3>Tỷ giá hiện tại</h3>
                        </div>
	                    <group colspan="4">
	                        <newline/>
	                        <field name="rate_USD_VND"/>
	                        <newline/>
							<field name="rate_USD_CNY"/>
	                        <newline/>
	                    </group>
						<group colspan="4" col="20" class="oe_group_non_right">
							<group colspan="4">
								<label for="last"/>
								<newline/>
								<div>
                                	<field name="last" nolabel="1" class="oe_inline" default_focus="1"
                                		on_change="onchange_values(last, open, high, low)"/> USD/tấn
                                </div>
                                <newline/>
                                <label string="||"/>
                                <newline/>
                                <div>
                                	<field name="last_usdc_lb" nolabel="1" class="oe_inline"/> USDc/Lb
                                </div>
                                <newline/>
                                <label string="||"/>
                                <newline/>
                                <div>
                                	<field name="last_cny_tan" nolabel="1" class="oe_inline"/> CNY/tấn
                                </div>
                                <newline/>
                                <label string="||"/>
                                <newline/>
                                <div>
                                	<field name="last_vnd_kg" nolabel="1" class="oe_inline"/> VNĐ/kg
                                </div>
							</group>
							<group colspan="4">
								<label for="volume"/>
								<newline/>
								<div>
                                	<field name="volume" nolabel="1" class="oe_inline"/> lot
                                </div>
							</group>
							<group colspan="4">
								<label for="open"/>
								<newline/>
								<div>
                                	<field name="open" nolabel="1" class="oe_inline"
                                		on_change="onchange_values(last, open, high, low)"/> USD/tấn
                                </div>
                                <newline/>
                                <label string="||"/>
                                <newline/>
                                <div>
                                	<field name="open_usdc_lb" nolabel="1" class="oe_inline"/> USDc/Lb
                                </div>
                                <newline/>
                                <label string="||"/>
                                <newline/>
                                <div>
                                	<field name="open_cny_tan" nolabel="1" class="oe_inline"/> CNY/tấn
                                </div>
                                <newline/>
                                <label string="||"/>
                                <newline/>
                                <div>
                                	<field name="open_vnd_kg" nolabel="1" class="oe_inline"/> VNĐ/kg
                                </div>
							</group>
							<group colspan="4">
								<label for="high"/>
								<newline/>
								<div>
                                	<field name="high" nolabel="1" class="oe_inline"
                                		on_change="onchange_values(last, open, high, low)"/> USD/tấn
                                </div>
                                <newline/>
                                <label string="||"/>
                                <newline/>
                                <div>
                                	<field name="high_usdc_lb" nolabel="1" class="oe_inline"/> USDc/Lb
                                </div>
                                <newline/>
                                <label string="||"/>
                                <newline/>
                                <div>
                                	<field name="high_cny_tan" nolabel="1" class="oe_inline"/> CNY/tấn
                                </div>
                                <newline/>
                                <label string="||"/>
                                <newline/>
                                <div>
                                	<field name="high_vnd_kg" nolabel="1" class="oe_inline"/> VNĐ/kg
                                </div>
							</group>
							<group colspan="4">
								<label for="low"/>
								<newline/>
								<div>
                                	<field name="low" nolabel="1" class="oe_inline"
                                		on_change="onchange_values(last, open, high, low)"/> USD/tấn
                                </div>
                                <newline/>
                                <label string="||"/>
                                <newline/>
                                <div>
                                	<field name="low_usdc_lb" nolabel="1" class="oe_inline"/> USDc/Lb
                                </div>
                                <newline/>
                                <label string="||"/>
                                <newline/>
                                <div>
                                	<field name="low_cny_tan" nolabel="1" class="oe_inline"/> CNY/tấn
                                </div>
                                <newline/>
                                <label string="||"/>
                                <newline/>
                                <div>
                                	<field name="low_vnd_kg" nolabel="1" class="oe_inline"/> VNĐ/kg
                                </div>
							</group>
						</group>
					
					</sheet>
				</form>
			</field>
		</record>
		
		
		<!-- Search view -->
		<record id="view_search_truc_gia_lme" model="ir.ui.view">
            <field name="name">view_search_truc_gia_lme</field>
            <field name="model">snc.truc.gia.lme</field>
            <field name="arch" type="xml">
	            <search string="Trực giá LME">
	            	<field name="ngay_tao"/>
					<!-- <field name="tien_te_id" string="Tiền tệ" filter_domain="[('tien_te_id', 'ilike', self)]"/> -->
					<!-- <field name="don_vi_tinh_id" string="Đơn vị tính" filter_domain="[('don_vi_tinh_id', 'ilike', self)]"/> -->
					<!-- <group  expand="1" string="Gom nhóm theo...">
                       <filter string="Ngày tạo" icon="terp-stock_symbol-selection" domain="[]" context="{'group_by' : 'ngay_tao'}"/>
                       <filter string='Đơn vị tính' icon="terp-mrp" domain="[]" context="{'group_by' : 'don_vi_tinh_id'}"/>
                   </group> -->
				</search>
            </field>
        </record>
        
        <!-- Graph view -->
        <record id="view_graph_truc_gia_lme" model="ir.ui.view">
            <field name="name">view_graph_truc_gia_lme</field>
            <field name="model">snc.truc.gia.lme</field>
            <field name="arch" type="xml">
           		<graph string="Trực giá LME" type="line">
                   	<field name="gio_tao"/>
                   	<field name="last"/>
            	</graph>
            </field>
        </record>
        
        <!-- Actions -->
        <record id="action_tree_truc_gia_lme" model="ir.actions.act_window">
            <field name="name">Trực giá LME</field>
            <field name="res_model">snc.truc.gia.lme</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="limit">20</field>
        </record>
        <record id="action_graph_truc_gia_lme" model="ir.actions.act_window">
            <field name="name">Biểu đồ trực giá LME</field>
            <field name="res_model">snc.truc.gia.lme</field>
            <field name="view_type">form</field>
            <field name="view_mode">graph</field>
            <field name="context">{'search_ngay_tao_hom_nay': 1}</field>
        </record>
		
	
	</data>
</openerp>
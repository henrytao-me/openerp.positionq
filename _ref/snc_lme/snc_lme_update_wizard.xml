<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>

		<!-- Form view -->
		<record id="view_form_snc_lme_update_wizard" model="ir.ui.view">
			<field name="name">view_form_snc_lme_update_wizard</field>
			<field name="model">snc.lme.update.wizard</field>
			<field name="arch" type="xml">
				<form string="Cập nhật Trực giá LME" version="7.0">
					<sheet>
						<group>
							<field name="name" invisible='1'/>
						</group>
						<footer>
                        	<button name="save_snc_lme_update" string="Cập nhật"  type="object" class="oe_highlight"  />
                        	or
                        	<button string="Cancel" class="oe_link" special="cancel" />
                    	</footer>
					</sheet>
				</form>
			</field>
		</record>
		
		<!-- Search view -->
		<record id="view_search_snc_lme_update_wizard" model="ir.ui.view">
			<field name="name">view_search_snc_lme_update_wizard</field>
			<field name="model">snc.lme.update.wizard</field>
			<field name="arch" type="xml">
				<search string="Trực giá LME">

				</search>
			</field>
		</record>
            
        <!-- Actions -->
		<record id="action_snc_lme_update_wizard" model="ir.actions.act_window">
			<field name="name">Cập nhật Trực giá LME</field>
			<field name="res_model">snc.lme.update.wizard</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="target">new</field>
		</record>    

	</data>
</openerp>
<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
	
		<!-- List view -->
		<record id="view_tree_pq_bo_phan" model="ir.ui.view">
			<field name="name">view_tree_pq_bo_phan</field>
			<field name="model">pq.bo.phan</field>
			<field name="arch" type="xml">
				<tree string="Bộ phận" version="7.0" editable="bottom">
					<field name="name"/>
				</tree>
			</field>
		</record>
		
		<!-- Form view -->
		<record id="view_form_pq_bo_phan" model="ir.ui.view">
			<field name="name">view_form_pq_bo_phan</field>
			<field name="model">pq.bo.phan</field>
			<field name="arch" type="xml">
				<form string="Bộ phận" version="7.0">
					<sheet>
						<group colspan="4">
							<field name="name"></field>
						</group>
					</sheet>
				</form>
			</field>
		</record>
		
		<!-- Search view -->
		<record id="view_search_pq_bo_phan" model="ir.ui.view">
            <field name="name">view_search_pq_bo_phan</field>
            <field name="model">pq.bo.phan</field>
            <field name="arch" type="xml">
	            <search string="Bộ phận" version="7.0">
					<field name="name"/>
				</search>
            </field>
        </record>
        
        <!-- Actions -->
        <record id="act_pq_bo_phan" model="ir.actions.act_window">
            <field name="name">Bộ phận</field>
            <field name="res_model">pq.bo.phan</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
	
	</data>
</openerp>